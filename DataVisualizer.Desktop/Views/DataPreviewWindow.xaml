<Window x:Class="DataVisualizer.Desktop.Views.DataPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataVisualizer.Desktop.Views"
        mc:Ignorable="d"
        Title="DataPreviewWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition MaxWidth="120"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="grdPreview" Grid.ColumnSpan="2" Panel.ZIndex="0" ItemsSource="{Binding PreviewData}"/>
        <WrapPanel Orientation="Vertical" Grid.Column="1" Panel.ZIndex="1">
            <Label Margin="10 5">Delimiter</Label>
            <TextBox x:Name="tbxDelimiter" Margin="10 0" Text="{Binding Delimiter}"/>
            <CheckBox x:Name="cbxHeader" IsChecked="{Binding ContainsHeader}" Margin="10 ">Contains header</CheckBox>
            <Button x:Name="btnOk" Command="{Binding OkCommand}" Content="Ok" HorizontalAlignment="Center"/>
        </WrapPanel>
    </Grid>
</Window>
