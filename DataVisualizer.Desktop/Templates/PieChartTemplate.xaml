    <!--Pie Chart template-->
    <DataTemplate x:Key="PieChartTemplate" DataType="x:Type ViewModels.PieChartViewModel">
        <DataTemplate.Resources>
            <helpers:ColorBrushConverter x:Key="ColorBrushConverter"/>
        </DataTemplate.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <chartingToolkit:Chart  Name="pieChart" Title="{Binding ChartTitle}" 
                Grid.Row="0"
                Grid.Column="0"
                Grid.RowSpan="3"
                Grid.ColumnSpan="2">
                <chartingToolkit:PieSeries DependentValuePath="Value" 
                    IndependentValuePath="Key" ItemsSource="{Binding Segments}" 
                    IsSelectionEnabled="True" />
            </chartingToolkit:Chart>
